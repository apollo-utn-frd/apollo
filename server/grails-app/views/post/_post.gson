model {
  Post post
}

json {
  usuario g.render(
    template: '/usuario/usuario_min',
    model: [usuario: post.usuario]
  )

  tipo post.tipo

  contenido g.render(
    template: "/post/post_${post.contenido.class.getSimpleName().toLowerCase()}",
    model: [contenido: post.contenido]
  )

  dateCreated post.dateCreated
}
