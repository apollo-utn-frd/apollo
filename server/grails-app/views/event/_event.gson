model {
  Event event
}

json {
  source g.render(
    template: "/event/event_${event.sourceClass.toLowerCase()}",
    model: [contenido: event.source()]
  )

  type event.type

  resource g.render(
    template: "/event/event_${event.resourceClass.toLowerCase()}",
    model: [contenido: event.resource()]
  )

  dateCreated event.dateCreated
}
